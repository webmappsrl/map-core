{
  "name": "map-core",
  "version": "2.0.0",
  "author": "Webmapp",
  "license": "ISC",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "surge-doc": "./node_modules/surge/lib/cli.js --project ./documentation --domain http://doc.map-core.surge.sh/",
    "surge-cov": "./node_modules/surge/lib/cli.js --project ./coverage/map-core --domain http://cov.map-core.surge.sh/",
    "release:major": "changelog -M && git add CHANGELOG.md && git commit -m 'updated CHANGELOG.md' && npm version major && git push origin && git push origin --tags",
    "release:minor": "changelog -m && git add CHANGELOG.md && git commit -m 'updated CHANGELOG.md' && npm version minor && git push origin && git push origin --tags",
    "release:patch": "changelog -p && git add CHANGELOG.md && git commit -m 'updated CHANGELOG.md' && npm version patch && git push origin && git push origin --tags",
    "compodoc": "npx compodoc -p tsconfig.doc.json",
    "serve:compodoc": "npx compodoc -p tsconfig.doc.json  -s -d ./documentation",
    "coverage": "ng test --no-watch --code-coverage",
    "compodoc:build": "compodoc -p tsconfig.doc.json",
    "compodoc:build-and-serve": "compodoc -p tsconfig.doc.json -s",
    "compodoc:serve": "compodoc -s"
  },
  "private": true,
  "dependencies": {
    "localforage": "^1.10.0",
    "ol": "7.1.0",
    "ol-ext": "^4.0.11",
    "rxjs": "~6.6.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.13.3"
  },
  "peerDependencies": {
    "@angular/animations": "~16.2.4",
    "@angular/common": "~16.2.4",
    "@angular/compiler": "^16.2.4",
    "@angular/core": "^16.2.4",
    "@angular/forms": "^16.2.4",
    "@angular/platform-browser": "^16.2.4",
    "@angular/platform-browser-dynamic": "^16.2.4",
    "@angular/router": "^16.2.4",
    "@ionic/angular": "^6.1.14"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^16.2.1",
    "@angular/cli": "^16.2.1",
    "@angular/compiler-cli": "^16.2.4",
    "@compodoc/compodoc": "^1.1.19",
    "@types/jasmine": "~3.8.0",
    "@types/node": "^12.11.1",
    "@types/ol": "^6.5.3",
    "generate-changelog": "^1.8.0",
    "jasmine-core": "~3.8.0",
    "karma": "^6.3.17",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.0.3",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "~1.7.0",
    "ng-packagr": "^16.2.3",
    "surge": "^0.23.1",
    "typescript": "~4.9.5"
  }
}
